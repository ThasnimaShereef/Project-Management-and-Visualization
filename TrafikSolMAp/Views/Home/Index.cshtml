<style>
    body {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
       
        background-image: linear-gradient(to top, #88d3ce 0%, #6e45e2 100%);
    }

    .login-container {
        display: flex;
        width: 900px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        border-radius: 10px;
        overflow: hidden;
    }

    .login-form {
        flex: 1;
         padding: 50px; 
        background-color: #fff;
        display: flex;
        flex-direction: column;
        justify-content: center;
    }

        .login-form h1 {
            margin-bottom: 20px;
        }

        .login-form input {
            width: 100%;
            padding: 15px;
            margin: 10px 0;
            border: 1px solid #ccc;
            border-radius: 30px;
        }

        .login-form button {
            padding: 15px;
            border: none;
            background-color: black;
            color: white;
            cursor: pointer;
            border-radius: 30px;
        }

        .login-form .social-login {
            display: flex;
            justify-content: space-between;
            margin-top: 20px;
        }

            .login-form .social-login a {
                flex: 1;
                margin: 0 5px;
                padding: 15px;
                text-align: center;
                background-color: #f1f1f1;
                border: 1px solid #ccc;
                border-radius: 5px;
                text-decoration: none;
                color: #000;
            }

    .login-banner {
        flex: 1;
        background-color: #f7f7f7;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        text-align: center;
      /*   padding: 50px; */
    }

        .login-banner img {
            width: 100%;
            height:100%
           /*  margin-bottom: 20px; */
        }

    button {
        background-color: #333;
        color: #fff;
        padding: 12px 20px;
        border: none;
        border-radius: 3px;
        cursor: pointer;
        width: 100%;
    }

        .login-banner p {
            font-size: 1.2em;
        }
</style>

    <div class="login-container">
        <div class="login-form">
            <h1>Login!</h1>
          @*   <p>Simplify your workflow and boost your productivity with Tuga's App. Get started for free.</p> *@
        <form asp-action="DashboardView" asp-controller="Dashboard">
            <input type="text" name="Username" placeholder="Username" />
                <input type="password" name="Password" placeholder="Password" />
              @*   <a href="#" style="color: grey; text-align: right; display: block;">Forgot Password?</a> *@
                <button type="submit">Login</button>
                
            </form>
        </div>
        <div class="login-banner">
        <img src="/img/Data_security_05.jpg"
             class="img-fluid" alt="Sample image">
            @* <p>Make your work easier and organized with Tuga's App</p> *@
        </div>
    </div>
    
